<% allExcursions.forEach(function(excursion) { %>
<a href="/excursions/details/<%= excursion.id %>" class="excursion-card group">
  <!-- Image Container -->
  <div class="relative h-52 overflow-hidden">
    <% if (excursion.img) { %>
    <img
      src="/img/excursions/<%= excursion.img %>"
      alt="<%= excursion.name %>"
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      onerror="this.src='/img/placeholder-excursion.jpg'"
    />
    <% } else { %>
    <div class="w-full h-full bg-gradient-to-br from-brand-orange to-codo-blue flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
    </div>
    <% } %>
    <!-- Price Badge -->
    <% if (excursion.price) { %>
    <div class="absolute top-4 right-4 bg-brand-orange text-white px-3 py-1 rounded-full text-sm font-bold shadow-lg">
      $<%= excursion.price.toLocaleString('es-AR') %>
    </div>
    <% } %>
  </div>

  <!-- Card Body -->
  <div class="p-5">
    <h3 class="font-bold text-lg text-codo-blue group-hover:text-brand-orange transition-colors line-clamp-2">
      <%= excursion.name %>
    </h3>

    <p class="mt-2 text-gray-600 text-sm line-clamp-2">
      <%= excursion.description %>
    </p>

    <!-- Meta Info -->
    <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
      <% if (excursion.duration) { %>
      <div class="flex items-center text-gray-500 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <%= excursion.duration %> horas
      </div>
      <% } %>

      <span class="inline-flex items-center text-brand-orange font-medium text-sm group-hover:translate-x-1 transition-transform">
        Ver detalles
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
</a>
<% }); %>