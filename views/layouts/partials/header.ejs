<section class="relative min-h-[600px] md:min-h-[700px] flex items-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img src="<%= bgImage %>" alt="Hero background" class="w-full h-full object-cover">
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-codo-blue-dark/90 via-codo-blue/80 to-brand-orange/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-6 pt-24">
    <div class="max-w-3xl">
      <span class="inline-block px-4 py-2 bg-brand-orange/20 text-brand-orange-light rounded-full text-sm font-medium mb-6 backdrop-blur-sm border border-brand-orange/30">
        Descubre Argentina con nosotros
      </span>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white leading-tight mb-6">
        <%= title %>
      </h1>

      <p class="text-xl md:text-2xl text-white/90 leading-relaxed mb-8 max-w-2xl">
        <%= subtitle %>
      </p>

      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/excursions/" class="btn-primary text-lg px-8 py-4">
          Explorar excursiones
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="#destinos" class="btn-outline text-lg px-8 py-4">
          Ver destinos
        </a>
      </div>
    </div>

    <!-- Stats -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl">
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-white">50+</div>
        <div class="text-white/70 mt-1">Excursiones</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-white">6</div>
        <div class="text-white/70 mt-1">Destinos</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-white">1000+</div>
        <div class="text-white/70 mt-1">Viajeros felices</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-white">5</div>
        <div class="text-white/70 mt-1">Estrellas</div>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-gray-50 to-transparent z-10"></div>
</section>
  