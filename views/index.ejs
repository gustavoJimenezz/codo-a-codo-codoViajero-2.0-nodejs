<!-- PRINCIPALES DESTINOS -->
<section id="destinos" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="section-title">Principales destinos</h2>
      <p class="section-subtitle max-w-2xl mx-auto">
        Descubre los rincones más hermosos de Argentina con nuestras excursiones guiadas
      </p>
    </div>

    <!-- Destinations Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <%
        const total = allDestinations.length;
        // Calcula col-span para el último elemento según su posición en el grid
        function getColSpan(lastIndex) {
          if (lastIndex === 0) return 1;
          let col;
          if (lastIndex <= 4) {
            col = (lastIndex % 2 === 1) ? 2 : 3;
          } else {
            col = ((lastIndex - 5) % 3) + 1;
          }
          return 4 - col;
        }
        const lastColSpan = getColSpan(total - 1);
      %>
      <% allDestinations.forEach(function(destination, index) { %>
      <%
        const isFirst = index === 0;
        const isLast = index === total - 1;

        let gridClasses = '';
        if (isFirst) {
          // Primer elemento: row-span-2
          gridClasses = 'lg:row-span-2 min-h-[400px] lg:min-h-[500px]';
        } else if (isLast) {
          // Último elemento: col-span dinámico + row-span-2
          let colSpanClass = lastColSpan === 3 ? 'lg:col-span-3' : (lastColSpan === 2 ? 'lg:col-span-2' : '');
          gridClasses = colSpanClass + ' lg:row-span-2 min-h-[400px] lg:min-h-[500px]';
        } else {
          gridClasses = 'min-h-[250px]';
        }
      %>
      <a
        href="/excursions/destination/<%= destination.id %>"
        class="destination-card <%= gridClasses %>"
      >
        <img
          src="/img/touristDestinations/<%= destination.img %>"
          alt="<%= destination.name %>"
          class="opacity-80"
        />
        <div class="card-content">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-2">
            <%= destination.name %>
          </h3>
          <div class="card-description">
            <p class="text-white/90 text-sm leading-relaxed">
              <%= destination.description %>
            </p>
            <span class="inline-flex items-center mt-4 text-brand-orange-light font-medium text-sm">
              Explorar destino
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </div>
      </a>
      <% }); %>
    </div>
  </div>
</section>

